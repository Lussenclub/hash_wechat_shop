<!--pages/template/template.wxml-->
<template name="quantity">
  <!-- 主容器 -->  
  <view class="stepper">  
      <!-- 减号 -->  
      <text bindtap="delCount" data-index="{{index}}">-</text>  
      <!-- 数值 -->  
      <input type="number" bindchange="bindManual" value="{{count?count : 1}}"  disabled="disabled"/>  
      <!-- 加号 -->  
      <text  bindtap="addCount" data-index="{{index}}">+</text>  
  </view>  
</template>
